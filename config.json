{
    "name": "LLR_ratio",
    "n_gpu": 1,

    "arch_background": {
        "type": "PixelCNN_pp",
        "args": {
            "input_channels": 1
        }
    },
    "arch_semantic": {
        "type": "PixelCNN_pp",
        "args": {
            "input_channels": 1
        }
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "img_size": 32
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0002,
            "weight_decay": 0.999995,
            "amsgrad": true
        }
    },
    "loss": "quantized_mixture_logistic_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 1,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 5000,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
